@model IEnumerable<OnlineStore.DATA.EF.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BeerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BeerDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ABV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BeerImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BeerStyle.BeerStyle1)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Package.PkgID)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Status.Status1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BeerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BeerDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ABV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BeerImage)
            @*@Html.DisplayFor(modelItem => item.BookImage)*@
            @*<img src="~/Content/imgstore/Labels/t_@item.BookImage" alt="Book cover" title="@item.BookTitle" />*@
            <img src="~/Content/Labels/@item.BeerImage" alt="Beer Label Image" title="@item.BeerName" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BeerStyle.BeerStyle1)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Package.PkgID)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Status.Status1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BeerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.BeerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BeerID })
        </td>
    </tr>
}

</table>
